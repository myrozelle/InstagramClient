<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:id="@+id/ivProfilePhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="userName"
        android:id="@+id/tvProfileUsername"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#517fa4"
        android:layout_toRightOf="@+id/ivProfilePhoto"
        android:layout_alignBottom="@+id/ivProfilePhoto"
        android:gravity="center"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingRight="10dp"
        android:text="12h"
        android:id="@+id/tvCreatedTime"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:layout_below="@+id/ivProfilePhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:minHeight="50dp" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/ivHeartIcon"
        android:src="@drawable/heart"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:minWidth="8dp"
        android:minHeight="8dp"
        android:paddingTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567 likes"
        android:id="@+id/tvLikesCt"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#517fa4"
        android:layout_toRightOf="@+id/ivHeartIcon"
        android:layout_alignTop="@+id/ivHeartIcon"
        android:gravity="top"
        />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/ivSpeechIcon"
        android:src="@drawable/speech_bubble"
        android:layout_below="@+id/ivHeartIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:minWidth="8dp"
        android:minHeight="8dp"
        android:paddingTop="2dp"/>

    <com.firstapp.manunya.instagramclient.LinkifiedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="userName  Caption"
        android:id="@+id/tvUsername"
        android:textSize="16sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/ivSpeechIcon"
        android:layout_alignTop="@+id/ivSpeechIcon"
        android:gravity="top"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColorLink="#517fa4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:text="View all xxx comments"
        android:id="@+id/tvAllComments"
        android:textSize="16sp"
        android:gravity="top"
        android:textColor="#C0C0C0"
        android:layout_below="@+id/tvUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tvAllComments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:id="@+id/llComments">


    </LinearLayout>


</RelativeLayout>